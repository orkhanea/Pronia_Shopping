@model List<SiteSocial>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center mb-4" style="font-size: 30px !important;">Site Socials</h4>
                @{
                    if (TempData["SocialError"] != null)
                    {
                        <p style="font-size: 20px !important; padding: 15px !important;" class="alert text-center text-warning">@TempData["SocialError"]</p>

                        TempData["SocialError"] = null;
                    }
                }
                @{
                    if (Model.Count < 4)
                    {
                        <a class="btn btn-light mb-3 px-5" asp-area="Admin" asp-controller="SiteSocial" asp-action="Create">Add New</a>
                    }
                }
                <div class="table-responsive">
                    <table class="table table-bordered text-center">
                        <thead>
                            <tr>
                                <th class="tableTrCustom">
                                    #
                                </th>
                                <th class="tableTrCustom">
                                    Social Name
                                </th>
                                <th class="tableTrCustom">
                                    Social Icon
                                </th>
                                <th class="tableTrCustom">
                                    Social Link
                                </th>
                                <th class="tableTrCustom">
                                    Edit
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 0;
                                foreach (var item in Model)
                                {
                                    counter++;
                                    <tr>
                                        <td style="vertical-align: middle !important; font-size: 15px !important; font-weight: 500 !important;">
                                            @counter
                                        </td>
                                        <td style="vertical-align: middle !important; font-size: 15px !important; font-weight: 500 !important;">
                                            @item.Name
                                        </td>
                                        <td style="vertical-align: middle !important; font-size: 15px !important; font-weight: 500 !important;">
                                            @item.Icon
                                        </td>
                                        <td style="vertical-align: middle !important; font-size: 15px !important; font-weight: 500 !important;">
                                            @item.Link
                                        </td>
                                        <td style="vertical-align: middle !important;">
                                            <a class="mb-2 w-50 btn-sm btn btn-outline-success" asp-route-id="@item.Id" asp-area="Admin" asp-controller="SiteSocial" asp-action="Update">Update</a>
                                            <br>
                                            <a class="w-50 btn-sm btn btn-outline-danger" asp-route-id="@item.Id" asp-area="Admin" asp-controller="SiteSocial" asp-action="Delete" onclick="return confirm('Are you sure?')">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

