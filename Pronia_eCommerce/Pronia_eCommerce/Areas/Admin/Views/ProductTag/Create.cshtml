@model ProductTag

<div class="row mt-3">
    <div class="col-lg-6" style="margin-left: auto !important; margin-right: auto !important;">
        <div class="card">
            <div class="card-body">
                <div style=" font-size: 30px !important;" class="text-center card-title">Create New Product Tag</div>
                <hr>
                <form class="p-5" asp-area="Admin" asp-controller="ProductTag" asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="@Model.TagName" class="form-label">Tag</label>
                        <input class="form-control" rows="4" asp-for="@Model.TagName" placeholder="Write a tag..." />
                        <span class="text-warning" asp-validation-for="@Model.TagName"></span>
                    </div>
                    <button type="submit" class="btn btn-light col-lg-6 mt-4 offset-6">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>