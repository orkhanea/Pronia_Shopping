@model About

<div class="row mt-3">
    <div class="col-lg-10" style="margin-left: auto !important; margin-right: auto !important;">
        <div class="card">
            <div class="card-body">
                <div style=" font-size: 30px !important;" class="text-center card-title">Create About</div>
                <hr>
                @{
                    if (TempData["AboutError"] != null)
                    {
                        <p style="font-size: 20px !important; padding: 15px !important;" class="alert text-center text-warning">@TempData["AboutError"]</p>

                        TempData["AboutError"] = null;
                    }
                }
                <form class="row p-5" asp-area="Admin" asp-controller="About" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="col-lg-12 mb-3">
                        <label asp-for="@Model.Desc" class="form-label">About PRONIA</label>
                        <textarea class="form-control" rows="7" asp-for="@Model.Desc" placeholder="About PRONIA"></textarea>
                        <span class="text-warning" asp-validation-for="@Model.Desc"></span>
                    </div>
                    <div class="col-lg-12 mb-3">
                        <label asp-for="@Model.VideoLink" class="form-label">Youtube Video URL</label>
                        <input class="form-control" asp-for="@Model.VideoLink" placeholder="Youtube Video URL">
                        <span class="text-warning" asp-validation-for="@Model.VideoLink"></span>
                    </div>
                    <div class="col-lg-12 my-3">
                        <label class="w-100 btn btn-outline-white" asp-for="@Model.SignatureFile">Choose Signature Image</label>
                        <input class="d-none form-control w-50" asp-for="@Model.SignatureFile">
                        <span class="text-warning" asp-validation-for="@Model.SignatureFile"></span>
                    </div>

                    <button type="submit" style=" position: relative !important; left: -13px !important;" class="btn btn-light px-5 col-lg-6 mt-4 offset-6">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>