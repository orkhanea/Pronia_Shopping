
@model About


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center" style="font-size: 30px !important;">About Us</h4>
                @{
                    if (Model == null)
                    {
                        <a class="btn btn-light mb-3 px-5" asp-area="Admin" asp-controller="About" asp-action="Create">Create New</a>
                    }
                    else
                    {

                        if (TempData["AboutError3"] != null)
                        {
                            <p style="font-size: 20px !important; padding: 15px !important;" class="alert text-center text-warning">@TempData["AboutError3"]</p>

                            TempData["AboutError3"] = null;
                        }

                        <div class="table-responsive">
                            <table class="table table-bordered text-center">
                                <thead>
                                    <tr>
                                        <th class="tableTrCustom">
                                            Signature
                                        </th>
                                        <th class="tableTrCustom">
                                            About PRONIA
                                        </th>
                                        <th class="tableTrCustom">
                                            Video URL
                                        </th>
                                        <th class="tableTrCustom">
                                            Edit
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        <tr>
                                            <td class="py-1" style="vertical-align: middle !important; width: 100px !important; height: 100px !important;">
                                                <img style="border-radius: unset !important; width: 100% !important; height: 100% !important; object-fit: contain !important;" src="~/img/uncategorized/@Model.Signature" alt="image" />
                                            </td>
                                            <td style="vertical-align: middle !important; font-size: 18px !important; font-weight: 500 !important; width: 500px !important;">
                                                <marquee behavior="scroll" direction="up" height="100"
                                                         scrollamount="2" scrolldelay="10">
                                                    @Model.Desc
                                                </marquee>
                                            </td>
                                            <td style="vertical-align: middle !important; width: 250px !important; font-size: 18px !important; font-weight: 500 !important;">
                                                @(Model.VideoLink.Length>23?Model.VideoLink.Substring(0, 23) + "...":Model.VideoLink)
                                            </td>
                                            <td style="width: 200px !important; vertical-align: middle !important;">
                                                <a class="mb-2 w-50 btn-sm btn btn-outline-success" asp-route-id="@Model.Id" asp-area="Admin" asp-controller="About" asp-action="Update">Update</a>
                                                <br>
                                                <a class="w-50 btn-sm btn btn-outline-danger" asp-route-id="@Model.Id" asp-area="Admin" asp-controller="About" asp-action="Delete" onclick="return confirm('Are you sure?')">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
