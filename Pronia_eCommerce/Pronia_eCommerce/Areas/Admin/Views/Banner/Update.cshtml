@model Banner

<div class="row mt-3">
    <div class="col-lg-10" style="margin-left: auto !important; margin-right: auto !important;">
        <div class="card">
            <div class="card-body">
                <div style=" font-size: 30px !important;" class="text-center card-title">Update Banner</div>
                <hr>
                @{
                    if (TempData["BannerError3"] != null)
                    {
                        <p style="font-size: 20px !important; padding: 15px !important;" class="alert text-center text-warning">@TempData["BannerError3"]</p>

                        TempData["BannerError3"] = null;
                    }
                }
            <form class="row p-5" asp-area="Admin" asp-controller="Banner" asp-action="Update" method="post" enctype="multipart/form-data">
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Title" placeholder="Title">
                    <span class="text-warning" asp-validation-for="@Model.Title"></span>
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Page" class="form-label">Page</label>
                    <input class="form-control" asp-for="@Model.Page" placeholder="Page">
                    <span class="text-warning" asp-validation-for="@Model.Page"></span>
                </div>
                <div class="col-lg-12 my-3">
                    <label class="w-100 btn btn-outline-white" asp-for="@Model.BgImageFile">Choose Banner Background</label>
                    <input class="d-none form-control w-50" asp-for="@Model.BgImageFile">
                    <span class="text-warning" asp-validation-for="@Model.BgImageFile"></span>
                </div>

                <input type="hidden" asp-for="@Model.Id" />
                <input type="hidden" asp-for="@Model.BgImage" />
                <button type="submit" style=" position: relative !important; left: -13px !important;" class="btn btn-light px-5 col-lg-6 mt-4 offset-6">Save Changes</button>
            </form>
            </div>
        </div>
    </div>
</div>
