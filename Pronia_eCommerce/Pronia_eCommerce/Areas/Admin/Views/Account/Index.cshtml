@model VmSiteRegister


<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card mx-auto my-4">
            <div class="card-body">
                <div class="card-content p-2">
                    <div class="text-center">
                        <img src="~/Areas/assets/images/logo-icon.png" alt="logo icon">
                    </div>
                    <div class="card-title text-uppercase text-center py-3">Sign Up</div>
                    <form asp-area="Admin" asp-controller="Account" asp-action="Index" method="post">
                        <div class="form-group row">
                            <div class="col-lg-6">
                                <label asp-for="Name" class="sr-only">Name</label>
                                <div class="position-relative has-icon-right">
                                    <input asp-for="Name" type="text" class="form-control input-shadow" placeholder="Name">
                                    <div class="form-control-position">
                                        <i class="icon-user"></i>
                                    </div>
                                    <span class="text-warning" asp-validation-for="@Model.Name"></span>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <label asp-for="Surname" class="sr-only">Surname</label>
                                <div class="position-relative has-icon-right">
                                    <input type="text" asp-for="Surname" class="form-control input-shadow" placeholder="Surname">
                                    <div class="form-control-position">
                                        <i class="icon-user"></i>
                                    </div>
                                    <span asp-validation-for="@Model.Surname"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="sr-only">Email ID</label>
                            <div class="position-relative has-icon-right">
                                <input type="email" asp-for="Email" class="form-control input-shadow" placeholder="Enter Email">
                                <div class="form-control-position">
                                    <i class="icon-envelope-open"></i>
                                </div>
                                <span class="text-warning" asp-validation-for="@Model.Email"></span>
                            </div>
                        </div>
                        @*<div class="form-group">
                            <label asp-for="Password" class="sr-only">Password</label>
                            <div class="position-relative has-icon-right">
                                <input type="password" asp-for="Password" class="form-control input-shadow" placeholder="Choose Password">
                                <div class="form-control-position">
                                    <i class="icon-lock"></i>
                                </div>
                                <span asp-validation-for="@Model.Password"></span>
                            </div>
                        </div>*@

                        <div class="form-group row">
                            <div class="col-lg-6">
                                <label asp-for="RoleId" class="sr-only">Select Role</label>
                                <div class="position-relative has-icon-right" id="RoleSelect">
                                    <select class="bg-light form-select" aria-label="Default select example" asp-for="RoleId">
                                        <option selected disabled>Please Select Role</option>
                                        @foreach (var role in ViewBag.Roles)
                                         {
                                            <option value="@role.Id">@role.Name</option>
                                         }
                                    </select>
                                    <span class="text-warning" asp-validation-for="@Model.RoleId"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label asp-for="Password" class="sr-only">Password</label>
                                <div class="position-relative has-icon-right">
                                    <input type="password" asp-for="Password" class="form-control input-shadow" placeholder="Choose Password">
                                    <div class="form-control-position">
                                        <i class="icon-lock"></i>
                                    </div>
                                    <span class="text-warning" asp-validation-for="@Model.Password"></span>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-light btn-block waves-effect waves-light">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>