@model List<IdentityRole>

<div class="row justify-content-center">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center" style="font-size: 30px !important; font-weight: 600 !important;">Roles</h4>
                @if (Model.Count < 3)
                {
                    <a class="btn btn-light mb-3 px-5" asp-area="Admin" asp-controller="Account" asp-action="RoleCreate">Create New Role</a>
                }
                @{
                    if (TempData["SocialError"] != null)
                    {
                        <p style="font-size: 20px !important;" class="alert alert-danger">@TempData["SocialError"]</p>

                        TempData["SocialError"] = null;
                    }
                }
                <div class="table-responsive">
                    <table class="table table-bordered text-center">
                        <thead>
                            <tr>
                                <th class="tableTrCustom">
                                    #
                                </th>
                                <th class="tableTrCustom">
                                    Name
                                </th>
                                <th class="tableTrCustom">
                                    Edit
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 0;
                                foreach (var item in Model)
                                {
                                    counter++;
                                    <tr>
                                        <td style="font-size: 18px !important; font-weight: 500 !important;">
                                            @counter
                                        </td>
                                        <td style="font-size: 18px !important; font-weight: 500 !important;">
                                            @item.Name
                                        </td>
                                        <td>
                                            @if (item.Name != "Moderator" && item.Name != "SuperAdmin" && item.Name != "Admin")
                                            {
                                                <a class="mb-2 btn-sm btn btn-outline-success" asp-route-id="@item.Id" asp-area="Admin" asp-controller="Account" asp-action="RoleUpdate">Update</a>
                                            }
                                            else
                                            {
                                                <span>You can't Remove, Update this role</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
