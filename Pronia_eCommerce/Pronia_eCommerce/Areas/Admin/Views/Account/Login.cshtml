@model VmSiteLogin

@{ 
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Pronia eCommerce Admin Panel</title>
    <!--favicon-->
    <link rel="icon" href="~/Areas/assets/images/favicon.ico" type="image/x-icon">
    <!-- simplebar CSS-->
    <link href="~/Areas/assets/plugins/simplebar/css/simplebar.css" rel="stylesheet" />
    <!-- Bootstrap core CSS-->
    <link href="~/Areas/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- animate CSS-->
    <script src="//cdn.ckeditor.com/4.17.2/full/ckeditor.js"></script>
    <link href="~/Areas/assets/css/animate.css" rel="stylesheet" type="text/css" />
    <!-- Icons CSS-->
    <link href="~/Areas/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" rel="stylesheet" />
    <!-- Sidebar CSS-->
    <link href="~/Areas/assets/css/sidebar-menu.css" rel="stylesheet" />
    <!-- Custom Style-->
    <link href="~/Areas/assets/css/app-style.css" rel="stylesheet" />

</head>

<body class="bg-theme bg-theme1 h-100" style="display: flex; flex-direction: column; align-items: center; align-content: center; justify-content: center;">

    <!-- start loader -->
    <div id="pageloader-overlay" class="visible incoming"><div class="loader-wrapper-outer"><div class="loader-wrapper-inner"><div class="loader"></div></div></div></div>
    <!-- end loader -->
    <!-- Start wrapper-->
    <div class="container">
        <div class="row" style="flex-direction: column; align-content: center;">
            @{ 
                if (TempData["SiteLoginRoleError"]!=null)
                {
                    <div class="alert col-lg-6 m-0 py-1 text-center" style="width: auto;">
                        <p class="text-warning p-0">@(TempData["SiteLoginRoleError"] as string)</p>
                    </div>
                    TempData["SiteLoginRoleError"] = null;
                }
            } 
            @{ 
                if (TempData["SiteLoginError"] != null)
                {
                    <div class="alert col-lg-6 m-0 py-1 text-center" style="width: auto;" >
                        <p class="text-warning p-0">@(TempData["SiteLoginError"] as string)</p>
                    </div>
                    TempData["SiteLoginError"] = null;
                }
            }
            <div class="col-lg-12 card card-authentication1 mx-auto my-5">
                <div class="card-body">
                    <div class="card-content p-2">
                        <div class="text-center">
                            <img src="~/img/logo/f00a7205-1331-466d-b67b-2123c8739f80-17February2022-logo-1.png" alt="logo icon">
                        </div>
                        <div class="card-title text-uppercase text-center py-3">Sign In</div>
                        <form asp-area="Admin" asp-controller="Account" asp-action="Login" method="post" >
                            <div class="form-group">
                                <label asp-for="Email" class="sr-only">Username</label>
                                <div class="position-relative has-icon-right">
                                    <input type="email" asp-for="Email" class="form-control input-shadow" placeholder="Enter Email">
                                    <div class="form-control-position">
                                        <i class="icon-user"></i>
                                    </div>
                                    <span class="text-warning" asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="sr-only">Password</label>
                                <div class="position-relative has-icon-right">
                                    <input type="password" asp-for="Password" class="form-control input-shadow" placeholder="Enter Password">
                                    <div class="form-control-position">
                                        <i class="icon-lock"></i>
                                    </div>
                                    <span class="text-warning" asp-validation-for="Password"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-light btn-block">Sign In</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Areas/assets/js/jquery.min.js"></script>
    <script src="~/Areas/assets/js/popper.min.js"></script>
    <script src="~/Areas/assets/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

    <!-- simplebar js -->
    <script src="~/Areas/assets/plugins/simplebar/js/simplebar.js"></script>
    <!-- sidebar-menu js -->
    <script src="~/Areas/assets/js/sidebar-menu.js"></script>
    <!-- Custom scripts -->
    <script src="~/Areas/assets/js/app-script.js"></script>
    <!-- Chart js -->
    <script src="~/Areas/assets/plugins/Chart.js/Chart.min.js"></script>
    <!-- FontAwsome Icon -->
    <link href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script src="~/Areas/assets/js/Select2.js"></script>
    <!-- Tippy Tooltip -->
    <script src="https://unpkg.com/tippy.js@4"></script>

</body>
</html>
