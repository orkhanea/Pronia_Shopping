@model CollectionS

<div class="row mt-3">
    <div class="col-lg-10" style="margin-left: auto !important; margin-right: auto !important;">
        <div class="card">
            <div class="card-body">
                <div style=" font-size: 30px !important;" class="text-center card-title">Update Collection Small</div>
                <hr>
                @{
                    if (TempData["CollectionError3"] != null)
                    {
                        <p style="font-size: 20px !important; padding: 15px !important;" class="alert text-center text-warning">@TempData["CollectionError3"]</p>

                        TempData["CollectionError3"] = null;
                    }
                }
                <form class="row p-5" asp-area="Admin" asp-controller="Collection" asp-action="UpdateS" method="post" enctype="multipart/form-data">
                    <div class="col-lg-6 mb-3">
                        <label asp-for="@Model.Title" class="form-label">Title</label>
                        <input class="form-control" asp-for="@Model.Title" placeholder="Title">
                        <span class="text-warning" asp-validation-for="@Model.Title"></span>
                    </div>
                    <div class="col-lg-6 mb-3">
                        <label asp-for="@Model.SubTitle" class="form-label">SubTitle</label>
                        <input class="form-control" asp-for="@Model.SubTitle" placeholder="SubTitle">
                        <span class="text-warning" asp-validation-for="@Model.SubTitle"></span>
                    </div>
                    <div class="col-lg-6 mb-3">
                        <label asp-for="@Model.ProductCatId" class="form-label">Choose category for "Collection L"</label>
                        <select asp-for="@Model.ProductCatId" class="form-select">
                            <option selected disabled>Please Select Category</option>
                            @foreach (var cat in ViewBag.ProdCatColL)
                            {
                                <option value="@cat.Id">@cat.CategoryName</option>
                            }
                        </select>
                        <span class="text-warning" asp-validation-for="@Model.ProductCatId"></span>
                    </div>
                    <div class="col-lg-12 my-3">
                        <label class="w-100 btn btn-outline-white" asp-for="@Model.ImageFile">Choose Background Image</label>
                        <input class="d-none form-control w-50" asp-for="@Model.ImageFile">
                        <span class="text-warning" asp-validation-for="@Model.ImageFile"></span>
                    </div>

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Image" />
                    <button type="submit" style=" position: relative !important; left: -13px !important;" class="btn btn-light px-5 col-lg-6 mt-4 offset-6">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>