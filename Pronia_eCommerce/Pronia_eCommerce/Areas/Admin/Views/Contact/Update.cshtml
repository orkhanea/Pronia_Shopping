@model ContactUs

<div class="row mt-3">
    <div class="col-lg-10" style="margin-left: auto !important; margin-right: auto !important;">
        <div class="card">
            <div class="card-body">
                <div style=" font-size: 30px !important;" class="text-center card-title">Update Contact</div>
                <hr>
                @{
                    if (TempData["ContactError2"] != null)
                    {
                        <p style="font-size: 20px !important; padding: 15px !important;" class="alert text-center text-warning">@TempData["ContactError2"]</p>

                        TempData["ContactError2"] = null;
                    }
                }
                <form class="row p-5" asp-area="Admin" asp-controller="Contact" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div class="col-lg-6 mb-3">
                        <label asp-for="@Model.Email" class="form-label">Email</label>
                        <input class="form-control" rows="7" asp-for="@Model.Email" placeholder="Email" />
                        <span class="text-warning" asp-validation-for="@Model.Email"></span>
                    </div>
                    <div class="col-lg-6 mb-3">
                        <label asp-for="@Model.Phone" class="form-label">Phone</label>
                        <input class="form-control" asp-for="@Model.Phone" placeholder="Phone">
                        <span class="text-warning" asp-validation-for="@Model.Phone"></span>
                    </div>
                    <div class="col-lg-12 mb-3">
                        <label asp-for="@Model.MapLink" class="form-label">Google Map Embed URL(src)</label>
                        <input class="form-control" asp-for="@Model.MapLink" placeholder="Google Map Embed URL(src)">
                        <span class="text-warning" asp-validation-for="@Model.MapLink"></span>
                    </div>
                    <div class="col-lg-12 mb-3">
                        <label asp-for="@Model.Address" class="form-label">Address</label>
                        <input class="form-control" asp-for="@Model.Address" placeholder="Address">
                        <span class="text-warning" asp-validation-for="@Model.Address"></span>
                    </div>
                    <div class="col-lg-12 my-3">
                        <label class="w-100 btn btn-outline-white" asp-for="@Model.BgImageFile">Choose Background Image</label>
                        <input class="d-none form-control w-50" asp-for="@Model.BgImageFile">
                        <span class="text-warning" asp-validation-for="@Model.BgImageFile"></span>
                    </div>

                    <input type="hidden" asp-for="@Model.Id" />
                    <input type="hidden" asp-for="@Model.BgImage" />
                    <button type="submit" style=" position: relative !important; left: -13px !important;" class="btn btn-light px-5 col-lg-6 mt-4 offset-6">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>