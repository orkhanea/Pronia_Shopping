@model Testimonial

<div class="row mt-3">
    <div class="col-lg-10" style="margin-left: auto !important; margin-right: auto !important;">
        <div class="card">
            <div class="card-body">
                <div style=" font-size: 30px !important;" class="text-center card-title">Create New Testimonial</div>
                <hr>
                @{
                    if (TempData["TestimonialError"] != null)
                    {
                        <p style="font-size: 20px !important; padding: 15px !important;" class="alert text-center text-warning">@TempData["TestimonialError"]</p>

                        TempData["TestimonialError"] = null;
                    }
                }
            <form class="row p-5" asp-area="Admin" asp-controller="Testimonial" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Name" class="form-label">Client Name</label>
                    <input class="form-control" asp-for="@Model.Name" placeholder="Client Name">
                    <span class="text-warning" asp-validation-for="@Model.Name"></span>
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Surname" class="form-label">Client Surname</label>
                    <input class="form-control" asp-for="@Model.Surname" placeholder="Client Surname">
                    <span class="text-warning" asp-validation-for="@Model.Surname"></span>
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Status" class="form-label">Client Status</label>
                    <input class="form-control" asp-for="@Model.Status" placeholder="Client Status">
                    <span class="text-warning" asp-validation-for="@Model.Status"></span>
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="@Model.Message" class="form-label">Message</label>
                    <textarea rows="5" class="form-control" asp-for="@Model.Message" placeholder="Content"></textarea>
                    <span class="text-warning" asp-validation-for="@Model.Message"></span>
                </div>
                <div class="col-lg-12 my-3">
                    <label class="w-100 btn btn-outline-white" asp-for="@Model.ImageFile">Choose Client Photo</label>
                    <input class="d-none form-control w-50" asp-for="@Model.ImageFile">
                    <span class="text-warning" asp-validation-for="@Model.ImageFile"></span>
                </div>

                <button type="submit" style=" position: relative !important; left: -13px !important;" class="btn btn-light px-5 col-lg-6 mt-4 offset-6">Create</button>
            </form>
            </div>
        </div>
    </div>
</div>