@model List<Testimonial>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center" style="font-size: 30px !important;">Testimonials</h4>
                @{
                    if (TempData["TestimonialError"] != null)
                    {
                        <p style="font-size: 20px !important; padding: 15px !important;" class="alert text-center text-warning">@TempData["TestimonialError"]</p>

                        TempData["TestimonialError"] = null;
                    }
                }
                <a class="btn btn-light mb-3 px-5" asp-area="Admin" asp-controller="Testimonial" asp-action="Create">Create New</a>
                <div class="table-responsive">
                    <table class="table table-bordered text-center">
                        <thead>
                            <tr>
                                <th class="tableTrCustom">
                                    #
                                </th>
                                <th class="tableTrCustom">
                                    Image
                                </th>
                                <th class="tableTrCustom">
                                    Name
                                </th>
                                <th class="tableTrCustom">
                                    Surname
                                </th>
                                <th class="tableTrCustom">
                                    Status
                                </th>
                                <th class="tableTrCustom">
                                    Content
                                </th>
                                <th class="tableTrCustom">
                                    Edit
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 0;
                                foreach (var item in Model)
                                {
                                    counter++;
                                    <tr>
                                        <td style="vertical-align: middle !important; font-size: 18px !important; font-weight: 500 !important;">
                                            @counter
                                        </td>
                                        <td class="py-1" style="vertical-align: middle !important; width: 250px !important; height: 100px !important;">
                                            <img style="border-radius: unset !important; width: 100% !important; height: 100% !important; object-fit: contain !important;" src="~/img/testimonial/@item.Image" alt="image" />
                                        </td>
                                        <td style="vertical-align: middle !important; width: 150px !important; font-size: 18px !important; font-weight: 500 !important;">
                                            @item.Name
                                        </td>
                                        <td style="vertical-align: middle !important; width: 150px !important; font-size: 18px !important; font-weight: 500 !important;">
                                            @item.Surname
                                        </td>
                                        <td style="vertical-align: middle !important; font-size: 18px !important; font-weight: 500 !important;">
                                            @item.Status
                                        </td>
                                        <td style="vertical-align: middle !important; font-size: 18px !important; font-weight: 500 !important;">
                                            <marquee behavior="scroll" direction="up" height="100"
                                                     scrollamount="2" scrolldelay="10">
                                                @item.Message
                                            </marquee>
                                        </td>
                                        <td style="vertical-align: middle !important; ">
                                            <a class="mb-2 btn-sm btn btn-outline-success" asp-route-id="@item.Id" asp-area="Admin" asp-controller="Testimonial" asp-action="Update">Update</a>
                                            <br>
                                            <a class="btn-sm btn btn-outline-danger" asp-route-id="@item.Id" asp-area="Admin" asp-controller="Testimonial" asp-action="Delete" onclick="return confirm('Are you sure?')">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

